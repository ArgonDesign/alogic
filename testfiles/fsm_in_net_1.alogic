network net2 {

  in sync ready u8 p_data;
  in sync ready u8 p_bonus;
  out sync ready u8 p_result;
  
  pipeline u8 x;
  pipeline u8 y;

  new fsm a {
    //out sync ready bubble;    
    void main() {
      x = p_data.read();
      write();
      fence;
    }
  }
  
  a->b;
  
  new fsm b {
    void main() {
      read();
      u8 local_var = x+8'd1;
      y = x + local_var;
      write();
      fence;
    }
  }
  
  b->c;
  
  new fsm c {
    void main() {
      read();
      p_result.write(x);
      fence;
      read();
      u8 z;
      z = p_bonus.read();
      p_result.write(z+y);
      fence;
    }
  }

}
