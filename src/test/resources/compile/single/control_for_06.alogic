fsm control_for_06 {
  in  bool i;
  in  bool j;
  out bool o = 0;
  in  bool a;
  in  bool b;
  out u3   x = 0;

  void main() {
    for (x = 0 ; j ; x++) {
      o = a;
      if (i) continue; else if (j) break;
      o = ~a;
    }
    for (x = 7 ; j ; x--) {
      o = b;
      if (i) continue; else if (j) break;
      o = ~b;
    }
  }
}
