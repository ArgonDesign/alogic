// @no-assertions
fsm assume_03 {
  in       u2 c;
  in       bool i;
  out wire bool o;

  void main() {
    assert c == 2'd2;
    if (c == 2'd2) {
      o =  i;
    } else {
      o = ~i;
    }
    fence;
  }
}
