network dependent_param_size_1 {
  in  u1  i_a;
  in  u4  i_b;
  out u5  o_a;
  out u9  o_b;

  fsm pad {
    param uint WI = 0;
    param uint WO = 0;
    const uint WP = WO - WI;
    param uint(WP) PADDING = 0;

    in  uint(WI) p_i;
    out uint(WO) p_o;

    void main() {
      p_o = {PADDING, p_i};
      fence;
    }
  }

  inst_a = new pad(WI=1, WO=5, PADDING=4'd7);
  inst_b = new pad(WI=4, WO=9, PADDING=5'd7);

  i_a -> inst_a.p_i; inst_a.p_o -> o_a;
  i_b -> inst_b.p_i; inst_b.p_o -> o_b;
}

