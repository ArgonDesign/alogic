network gen_in_if_0 {
  in u32 p_i;

  out u32 p_o4;
  out u32 p_o9;

  fsm inner {
    param uint P;

    out u32 p_o;

    void main() {
      u32 b = p_i;
      // This checks gen in if works without {} around the 'thenStmt'
      if (b[0]) gen for (uint N = 0, uint B = 0; N < P; N += 1, B += 2) {
        b += N << B;
      }
      p_o.write(b);
      fence;
    }
  }

  i_4 = new inner(P=4);
  i_9 = new inner(P=9);

  i_4.p_o -> p_o4;
  i_9.p_o -> p_o9;
}
