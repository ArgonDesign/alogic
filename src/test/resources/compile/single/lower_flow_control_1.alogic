network lower_flow_control_1 {
  in  sync bool i;
  out sync bool o;

  new fsm inner {
    in  sync      bool ii;
    out sync wire bool oo;

    void main() {
      oo.write(ii.read());
      fence;
    }
  }

  i -> inner.ii;
  inner.oo -> o;
}

