fsm control_for_10 {
  in  bool i;
  in  bool j;
  out bool o = 0;
  in  bool a;
  in  bool b;

  void main() {
    for (;;) {
      o = a;
      if (i) continue;
      o = ~a;
      if (j) break;
    }
    for (;;) {
      o = b;
      if (i) continue;
      o = ~b;
      if (j) break;
    }
  }
}
