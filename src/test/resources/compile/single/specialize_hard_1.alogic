fsm specialize_hard_1 {
  in bool x;
  // Putting this under a 'gen if' makes initial specialization of 'a'
  // succeed but 'main' and 'b' fail, resulting inn having to discard the 
  // specialization of 'a' as it is dependent on 'main'
  gen if (true) {
    in bool i;
  }
  out wire bool o;

  void main() {
    o = 0;
    if (x) {
      goto a;
    } else {
      goto b;
    }
  }

  void a() {
    o = 1;
    goto main;
  }

  void b() {
    o = i;
    goto main;
  }
}
