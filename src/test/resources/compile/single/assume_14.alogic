fsm assume_14 {
  in       u8 i;
  out wire u8 o;

  void main() {
    // Strange way of asserting that i[7:4] are zeroes, but because both
    // sides reference i, we cannot infer the value if i.
    assert !(i != {4'd0, i[3:0]});
    o = i;
    fence;
  }
}
