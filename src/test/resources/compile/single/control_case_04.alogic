fsm control_case_04 {
  in u2 i;
  out u4 o = 0;

  void main() {
    case (i) {
      2'd0: {
        o = 0;
        return;
      }
      2'd1, 2'd2: {
        o = 6;
        fence;
      }
      // default shold be fence
    }
    o = ~o;
    fence;
  }
}
