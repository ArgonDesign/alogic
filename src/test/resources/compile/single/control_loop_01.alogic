fsm control_loop_01 {
  in  bool i;
  out bool o = 0;
  in  bool a;
  in  bool b;

  void main() {
    loop {
      o = a;
      if (i) break;
      loop {
        o = ~a;
        if (i) break;
      }
    }
    loop {
      o = b;
      if (i) break;
      loop {
        o = ~b;
        if (i) break;
      }
    }
  }
}
