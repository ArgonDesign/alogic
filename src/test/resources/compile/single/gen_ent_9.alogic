network gen_ent_9 {
  in  u1  i_0;
  in  u2  i_1;
  in  u3  i_2;
  in  u4  i_3;

  out u12 o_0;
  out u14 o_1;
  out u16 o_2;
  out u18 o_3;

  gen for (u2 n <= 3) {
    fsm connect {
      const uint W = 'n + 1;

      param uint(W + 10) PADDING;

      in       uint(W)      p_i;
      out wire uint(2*W+10) p_o;

      void main() {
        p_o = {PADDING, p_i};
        fence;
      }
    }

    inst = new connect(PADDING = 'n * 10);

    gen if (n == 0) {
      i_0 -> inst.p_i; inst.p_o -> o_0;
    } else if (n == 1) {
      i_1 -> inst.p_i; inst.p_o -> o_1;
    } else if (n == 2) {
      i_2 -> inst.p_i; inst.p_o -> o_2;
    } else {
      i_3 -> inst.p_i; inst.p_o -> o_3;
    }
  }
}

