fsm control_case_07 {
  in u2 i;
  out u4 o = 0;

  void main() {
    o += 1;
    fence;
    o = o ^ 4'b1010;
    case (i) {
      2'd0: {
        o = ~o;
        return;
      }
      2'd1, 2'd2: {
        o += 1;
        fence;
        o += 2;
        fence;
      }
      // default shold be fence
    }
  }
}
