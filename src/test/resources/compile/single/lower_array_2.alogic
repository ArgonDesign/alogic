fsm lower_array_2 {
  in sync  u2    waddr;
  in       bool  wdata;
  in       u2    raddr;
  out wire bool  rdata;

  bool store[4];

  void main() {
    rdata = store[raddr];
    store.write(waddr.read(), wdata);
    fence;
  }
}
